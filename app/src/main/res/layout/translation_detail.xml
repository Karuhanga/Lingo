<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@android:color/transparent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/design_default_color_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                tools:text="Noun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_word_type"
                android:layout_marginBottom="@dimen/margins"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:text="English"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_english_label"/>

        <TextView
                tools:text="English Word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_english"
                android:layout_marginBottom="@dimen/margins"
                android:textAppearance="@android:style/TextAppearance.Large"/>


        <TextView
                android:text="Ruruuli/ Lunyara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_ruruuli_label"/>

        <TextView
                tools:text="Ruruuli Word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_ruruuli"
                android:layout_marginBottom="@dimen/margins"
                android:textAppearance="@android:style/TextAppearance.Large"/>


        <TextView
                android:text="English Usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_english_usage_label"/>

        <TextView
                tools:text="English Word Usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_english_usage"
                android:layout_marginBottom="@dimen/margins"
                android:textAppearance="@android:style/TextAppearance.Medium"/>


        <TextView
                android:text="Ruruuli/ Lunyara Usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_ruruuli_usage_label"/>

        <TextView
                tools:text="Ruruuli Word Usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation_detail_ruruuli_usage"
                android:layout_marginBottom="@dimen/margins"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>